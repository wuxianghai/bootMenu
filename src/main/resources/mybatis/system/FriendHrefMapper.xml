<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.system.dao.FriendHrefDao">

	<select id="get" resultType="com.bootdo.system.domain.FriendHrefDO">
		select `href_id`,`name`,`picture`,`create_date`,`update_date` from w_friend_href where href_id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.system.domain.FriendHrefDO">
		select `href_id`,`name`,`picture`,`create_date`,`update_date` from w_friend_href
        <where>  
		  		  <if test="hrefId != null and hrefId != ''"> and href_id = #{hrefId} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="picture != null and picture != ''"> and picture = #{picture} </if>
		  		  <if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
		  		  <if test="updateDate != null and updateDate != ''"> and update_date = #{updateDate} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by href_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from w_friend_href
		 <where>  
		  		  <if test="hrefId != null and hrefId != ''"> and href_id = #{hrefId} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="picture != null and picture != ''"> and picture = #{picture} </if>
		  		  <if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
		  		  <if test="updateDate != null and updateDate != ''"> and update_date = #{updateDate} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.system.domain.FriendHrefDO" useGeneratedKeys="true" keyProperty="hrefId">
		insert into w_friend_href
		(
			`name`, 
			`picture`, 
			`create_date`, 
			`update_date`
		)
		values
		(
			#{name}, 
			#{picture}, 
			#{createDate}, 
			#{updateDate}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.system.domain.FriendHrefDO">
		update w_friend_href 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="picture != null">`picture` = #{picture}, </if>
			<if test="createDate != null">`create_date` = #{createDate}, </if>
			<if test="updateDate != null">`update_date` = #{updateDate}</if>
		</set>
		where href_id = #{hrefId}
	</update>
	
	<delete id="remove">
		delete from w_friend_href where href_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from w_friend_href where href_id in 
		<foreach item="hrefId" collection="array" open="(" separator="," close=")">
			#{hrefId}
		</foreach>
	</delete>

</mapper>